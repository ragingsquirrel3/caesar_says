source 'https://rubygems.org'

gem 'rails', '3.2.8'

group :test, :development do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'capybara'
  gem 'selenium-webdriver'
end

# use different db in production for Heroku
group :production do
  gem 'pg'
end

group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer'
  gem 'less-rails'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# some basic Rails spice
gem 'twitter-bootstrap-rails'
gem 'haml-rails'

# le gem
gem 'roman_numeral_evaluator'
